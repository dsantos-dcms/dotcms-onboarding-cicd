kind: NetworkPolicy
apiVersion: networking.k8s.io/v1
metadata:
  namespace: {{ client_name }}
  name: allow-inter-namespace
spec:
  podSelector:
    matchLabels:
      app: dotcms
      cust: {{ client_name }}
  ingress:
  - from:
    - podSelector:
        matchLabels:
          app: dotcms
          cust: {{ client_name }}
    ports: []
